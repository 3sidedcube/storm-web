<div id="mailItemTemplate" data-win-control="WinJS.Binding.Template">
    <div class="mailItem">
        <div class="hitTarget win-interactive"></div>
        <div class="authorRoot">
            <h2 class="author" data-win-bind="innerHTML: author"></h2>
        </div>
        <h5 class="title win-pivot-slide1" data-win-bind="innerHTML: title; style.color: titleColor"></h5>
        <h5 class="previewText win-pivot-slide2" data-win-bind="innerHTML: previewText"></h5>
        <h5 class="time" data-win-bind="innerHTML: time"></h5>
    </div>
</div>

<div id="pivotScenario3" data-win-control="WinJS.UI.Pivot" data-win-options="{ title: 'HAZARDS', selectedIndex: 0 }">
	{{#each pages}}
		<div class="listviewpivotitem" data-win-control="WinJS.UI.PivotItem" data-win-options="{ 'header': '{{l tabBarItem.title}}', managedLV: true }">
			<div class="page-container" data-src="{{src}}"></div>
		</div>
	{{/each}}

	<div class="listviewpivotitem" data-win-control="WinJS.UI.PivotItem" data-win-options="{ 'header': 'all', managedLV: true }">
		<div data-win-control="WinJS.UI.ListView" data-win-options="{ itemDataSource: All.dataSource, layout: { type: WinJS.UI.ListLayout }, itemTemplate: mailItemTemplate, selectionMode: 'none' }"></div>
	</div>
	<div class="listviewpivotitem" data-win-control="WinJS.UI.PivotItem" data-win-options="{ 'header': 'unread', managedLV: true }">
		<div data-win-control="WinJS.UI.ListView" data-win-options="{ itemDataSource: Unread.dataSource, layout: { type: WinJS.UI.ListLayout }, itemTemplate: mailItemTemplate, selectionMode: 'none' }"></div>
	</div>
	<div class="listviewpivotitem" data-win-control="WinJS.UI.PivotItem" data-win-options="{ 'header': 'flagged', managedLV: true }">
		<div data-win-control="WinJS.UI.ListView" data-win-options="{ itemDataSource: Flagged.dataSource, layout: { type: WinJS.UI.ListLayout }, itemTemplate: mailItemTemplate, selectionMode: 'none' }"></div>
	</div>
	<div class="listviewpivotitem" data-win-control="WinJS.UI.PivotItem" data-win-options="{ 'header': 'urgent',appBarClosedDisplayMode: 'minimal', managedLV: true }">
		<div data-win-control="WinJS.UI.ListView" data-win-options="{ itemDataSource: Urgent.dataSource, layout: { type: WinJS.UI.ListLayout }, itemTemplate: mailItemTemplate, selectionMode: 'none' }"></div>
	</div>
</div>

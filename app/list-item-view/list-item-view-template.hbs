{{#if annotation}}
	<span class="annotation">{{annotation}}</span>
{{/if}}

{{#if image}}
	<span class="img-container" style="-webkit-mask-image:url('{{getImageUrl image}}'); mask-image:url('{{getImageUrl image}}')">
		<img src="{{getImageUrl image}}">
	</span>
{{/if}}

{{#if images}}
	<span></span>
	<div class="image-overlay"></div>
{{/if}}

{{#if volatile}}
	<input type="checkbox">
{{/if}}

<div class="text-container">
	{{#if title}}
		<div class="{{title.class}}">{{{l title}}}</div>
	{{/if}}

	{{#if description}}
		<div class="{{description.class}}">{{{l description}}}</div>
	{{/if}}
</div>

{{#if link}}
	<span class="chevron"><i class="icon-chevron-right"></i></span>
{{/if}}

{{#if showLinkTitle}}
	<div class="link-title">{{l link.title}}</div>
{{/if}}

{{#if button}}
	<button class="{{button.class}} btn input-block-level">{{{l button.title}}}</button>
{{/if}}

{{#if duration}}
	{{!-- This will be removed when VideoListItemView is deprecated --}}
	<i class="icon-play-circle"></i>
{{/if}}

{{#if videos}}
	<i class="icon-play-circle"></i>
{{/if}}

{{#if progressMessage}}
	<div class="Text">{{{l progressMessage}}}
	<span class="chevron"><i class="icon-chevron-right"></i></span>
{{/if}}

{{#if quizzes}}
	<span>[Quizzes]</span>
{{/if}}

{{#if embeddedMedia}}
	<div class="embedded-media">
		{{#each embeddedMedia}}
			<img src="{{getImageUrl this}}">
		{{/each}}
	</div>
{{/if}}

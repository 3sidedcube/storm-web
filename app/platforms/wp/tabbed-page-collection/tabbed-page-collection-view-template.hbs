<div data-win-control="WinJS.UI.Pivot"
     data-win-options="{ title: '{{l appName}}', selectedIndex: 0 }"
     class="pivot">
  {{#each pages}}
    <div data-win-control="WinJS.UI.PivotItem"
         data-win-options="{ 'header': '{{l tabBarItem.title}}'}">
      <div class="page-container" data-src="{{src}}"></div>
    </div>
  {{/each}}
</div>
<div data-win-control="WinJS.UI.AppBar"
     data-win-options="{placement: 'bottom'}"
     data-storm-win-body="root-appbar">
  {{#each appBarTabs}}
    <button class="no-ring clickable"
            data-uri="{{src}}"
            data-win-control="WinJS.UI.AppBarCommand"
            data-win-options="{id:'{{src}}',
              type: 'button',
              section: 'primary',
              label: '{{l tabBarItem.title}}',
              icon: 'url({{getImageUrl tabBarItem.image}})'}"></button>
  {{/each}}
  <button data-win-control="WinJS.UI.AppBarCommand"
          data-win-options="{
            type: 'flyout',
            section: 'primary',
            label: 'Settings',
            icon: 'settings'}"
          class="settings-button"></button>
</div>
<div data-win-control="WinJS.UI.SettingsFlyout"
     data-storm-win-body="root-settings-flyout"
     aria-label="App Settings flyout"
     class="settings-flyout">
  <div class="win-ui-light win-header">
    <button type="button" onclick="WinJS.UI.SettingsFlyout.show()"
            class="win-backbutton"></button>
    <div class="win-label">Settings</div>
  </div>
  <div class="win-content">
    <div class="win-settings-section">
      <h3>Clear all achievements</h3>
      <p>Resets all completed quizzes and badges</p>
      <button class="reset-button" onclick="App.resetBadges()">Reset</button>
    </div>
  </div>
</div>
